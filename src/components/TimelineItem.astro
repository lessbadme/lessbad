---
import type { CollectionEntry } from "astro:content";
import GameBadge from "./GameBadge.astro";

interface Props {
  entry: CollectionEntry<"entries">;
}

const { entry } = Astro.props;
---

<article class="card timeline-item" data-game={entry.data.game}>
  <div class="meta-row">
    <GameBadge game={entry.data.game} />
    <span class="muted">{entry.data.date.toISOString().slice(0, 10)}</span>
    <span class="muted">Â· {entry.data.status}</span>
  </div>
  <a class="entry-link" href={`/log/${entry.slug}/`}>{entry.data.title}</a>
</article>
