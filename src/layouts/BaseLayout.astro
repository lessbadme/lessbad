---
import "../styles/tokens.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Cross-game learning log and strategy notes." } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <div class="page-shell stack">
      <slot />
    </div>
  </body>
</html>
