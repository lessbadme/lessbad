---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Cross-game learning log and strategy notes." } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <style>
      :root {
        color-scheme: light dark;
        font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
      }

      body {
        margin: 0;
      }

      a {
        color: inherit;
      }

      .page-shell {
        max-width: 960px;
        margin: 0 auto;
        padding: 1.5rem;
      }

      .stack {
        display: grid;
        gap: 1rem;
      }

      .card {
        border: 1px solid color-mix(in oklab, canvastext 20%, canvas 80%);
        border-radius: 0.75rem;
        padding: 1rem;
      }

      .muted {
        opacity: 0.78;
      }

      .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
        margin-top: 0.5rem;
      }

      .tag {
        border: 1px solid color-mix(in oklab, canvastext 20%, canvas 80%);
        border-radius: 999px;
        padding: 0.1rem 0.5rem;
        font-size: 0.85rem;
        text-decoration: none;
      }

      .inline-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        padding: 0;
        list-style: none;
      }

      .inline-list a {
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <div class="page-shell stack">
      <slot />
    </div>
  </body>
</html>
